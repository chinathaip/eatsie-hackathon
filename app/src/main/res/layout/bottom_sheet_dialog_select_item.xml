<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".extension.SelectItemFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/buttom_sheet">

        <ImageView
            android:id="@+id/confirmItemImageView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="@dimen/space_24dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/titleTextView"
            style="@style/BaseTheme.Header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space_24dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/black"
            app:layout_constrainedWidth="true"
            app:layout_constraintEnd_toStartOf="@id/scaleImageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/confirmItemImageView"
            tools:text="Title" />

        <TextView
            android:id="@+id/subtitleTextView"
            style="@style/BaseTheme.Normal.10"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_24dp"
            android:layout_marginTop="@dimen/space_2dp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titleTextView"
            tools:text="description" />


        <TextView
            android:id="@+id/itemPriceTextView"
            style="@style/BaseTheme.Header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space_24dp"
            android:paddingHorizontal="@dimen/space_2dp"
            android:paddingTop="@dimen/space_2dp"
            android:textAlignment="textEnd"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/confirmItemImageView"
            tools:text="100" />

        <ImageView
            android:id="@+id/scaleImageView"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginHorizontal="@dimen/space_8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/scale"
            app:layout_constraintEnd_toStartOf="@+id/itemWeightTextView"
            app:layout_constraintTop_toTopOf="@id/itemWeightTextView" />

        <TextView
            android:id="@+id/itemWeightTextView"
            style="@style/BaseTheme.Normal.10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/space_24dp"
            android:layout_marginTop="@dimen/space_8dp"
            android:paddingHorizontal="@dimen/space_2dp"
            android:paddingTop="@dimen/space_4dp"
            android:textAlignment="textEnd"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/itemPriceTextView"
            tools:text="0.14 grams" />

        <TextView
            android:id="@+id/itemDescriptionTextView"
            style="@style/BaseTheme.Normal.10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space_24dp"
            android:paddingHorizontal="@dimen/space_2dp"
            android:paddingTop="@dimen/space_2dp"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@id/subtitleTextView"
            app:layout_constraintTop_toBottomOf="@id/itemWeightTextView"
            tools:text="Organic orange from Mimew Farm.
100 baht per one orange because this is the best orange in the world.
Doubt it? Purchase one and have a taste!" />

        <Button
            android:id="@+id/confirmItemSelectionButton"
            style="@style/BaseTheme.Header.14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space_24dp"
            android:background="@drawable/background_yellow_stroke_brown"
            android:paddingHorizontal="@dimen/space_32dp"
            android:paddingTop="@dimen/space_2dp"
            android:text="Confirm"
            android:textAllCaps="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mfgDateArea" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/mfgDateArea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="@dimen/space_24dp"
            android:background="@drawable/rounded_button"
            android:paddingHorizontal="@dimen/space_10dp"
            android:paddingTop="@dimen/space_8dp"
            android:paddingBottom="@dimen/space_6dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/itemDescriptionTextView">

            <TextView
                android:id="@+id/mfgText"
                style="@style/BaseTheme.WhiteBold.10"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="MFG: "
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/mfgDate"
                style="@style/BaseTheme.WhiteNormal.10"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:layout_constraintStart_toEndOf="@+id/mfgText"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="03/11/2022" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/expDateArea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="@dimen/space_24dp"
            android:background="@drawable/rounded_button"
            android:paddingHorizontal="@dimen/space_10dp"
            android:paddingTop="@dimen/space_8dp"
            android:paddingBottom="@dimen/space_6dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/itemDescriptionTextView">

            <TextView
                android:id="@+id/expText"
                style="@style/BaseTheme.WhiteBold.10"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="EXP: "
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/expDate"
                style="@style/BaseTheme.WhiteNormal.10"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:layout_constraintStart_toEndOf="@+id/expText"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="10/11/2022" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>